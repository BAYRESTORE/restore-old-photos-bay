// pages/restoration-siri/index.js
import { useState } from 'react';

export default function RestorationSiri() {
  const [file, setFile] = useState(null);
  const [preview, setPreview] = useState(null);

  const handleFileChange = (e) => {
    const uploaded = e.target.files[0];
    setFile(uploaded);
    setPreview(URL.createObjectURL(uploaded));
  };

  const handleRestore = () => {
    alert('🔧 Fitur restorasi akan diproses oleh AI (simulasi)');
  };

  return (
    <div style={{ padding: '2rem', fontFamily: 'sans-serif' }}>
      <h1>🖼️ Restoration Siri</h1>
      <p>Upload foto lama Anda dan perbaiki dengan AI.</p>

      <input type="file" accept="image/*" onChange={handleFileChange} />
      {preview && (
        <div style={{ marginTop: '1rem' }}>
          <img src={preview} alt="Preview" style={{ maxWidth: '100%', height: 'auto' }} />
        </div>
      )}

      {file && (
        <button
          onClick={handleRestore}
          style={{
            marginTop: '1rem',
            padding: '0.5rem 1rem',
            backgroundColor: '#4CAF50',
            color: 'white',
            border: 'none',
            borderRadius: '4px',
            cursor: 'pointer',
          }}
        >
          🔄 Perbaiki Foto
        </button>
      )}
    </div>
  );
}
